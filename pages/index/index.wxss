/* 导航区域样式 */
.nav-wrapper{
  display: flex; 
}
.nav-wrapper .nav-item{
  display: flex;
  flex-direction: column;
  flex:auto;
  align-items: center;
}
.nav-wrapper .nav-item .desc{
  font-size: 30rpx;
}
.nav-wrapper .nav-item .iconfont{
  display: block;
  width:100rpx;
  height:100rpx;
  background-color:#d43c33;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 45rpx;
  color: #fff;
  margin: 20rpx 0;
}

/* 歌曲推荐区域 */
.recommend-wrapper{
  margin-top:30rpx;
}

.recommend-wrapper .recommendScroll{
  display: flex;
  height: 350rpx;
  padding:0 20rpx;
  margin-top:20rpx;
}
.recommend-wrapper .recommendScroll .desc{
  font-size: 30rpx;
}
.recommend-wrapper .recommendScroll view{
  width:200rpx;
  margin-right:20rpx;
}
.recommend-wrapper .recommendScroll view image{
  width:200rpx;
  height:200rpx;
  border-radius: 15rpx;
}
.recommend-wrapper .recommendScroll view text{
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  width:100%;
  overflow: hidden;
}

/* 排行榜区域  */
.ranklist-wrapper .ranklist-banner{
  padding: 0 20rpx;
  height:500rpx;
}
.ranklist-wrapper .ranklist-banner swiper-item .ranklist-name{
  font-size:28rpx;
  color:#333;
}
.ranklist-wrapper .ranklist-banner swiper-item .ranklist-lists{
  padding:20rpx 0;
} 
.ranklist-wrapper .ranklist-lists .ranklist-item {
  margin: 20rpx 0;
  height:100rpx;
  display: flex;
  align-items: center;
}
.ranklist-wrapper .ranklist-lists .ranklist-item .item-pic{
  width:100rpx;
  height:100rpx;
  border-radius: 20rpx;
}
.ranklist-wrapper .ranklist-lists .ranklist-item text{
  margin-left:40rpx;
  font-size:30rpx;
}