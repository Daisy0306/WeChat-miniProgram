/* pages/video/video.wxss */
.videoWrapper .topBar{
  display: flex;
  padding: 10rpx;
}
.videoWrapper .topBar image{
  width:60rpx;
  height:60rpx;
}
.videoWrapper .topBar .search{
  height:60rpx;
  line-height: 60rpx;
  flex-grow: 1;
  border:1rpx solid #eee;
  margin: 0 10rpx;
}
.videoWrapper .topBar .placholder{
  color:#d43c33;
  text-align: center;
}
.videoWrapper .navBar{
  display: flex;
  height:100rpx;
}
.videoWrapper .navBar .navItem{
  height:96rpx;
  white-space: nowrap;
  line-height: 96rpx;
  margin: 0 20rpx;
}
.videoWrapper .navBar .navItem.active{
  border-bottom:4rpx solid red;
}
/* 下方视频展示区域 */
.videoList .common {
  width: 100%;
  border-radius: 10rpx;
}

.videoList .videoItem{
  padding:3%;
  padding-bottom:0;
}


.videoList{
  padding-top:40rpx;
}

.videoList .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}